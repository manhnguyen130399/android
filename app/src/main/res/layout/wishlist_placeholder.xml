<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#EEEDEE"
                app:cardCornerRadius="5dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/content_load"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/knu" />

                <ImageView
                    android:id="@+id/img_wish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/txt_wishname"
                    android:layout_width="120dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="10dp"
                    android:background="#DCDBDC"
                    android:fontFamily="@font/opensans_semibold"
                    android:maxLines="2"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="50dp"
                    android:layout_height="10dp"
                    android:layout_below="@+id/txt_wishname"
                    android:layout_marginTop="10dp"
                    android:background="#DCDBDC"
                    android:fontFamily="@font/opensans_semibold"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/add_cart"
                        android:layout_width="70dp"
                        android:layout_height="22dp"
                        android:background="@drawable/placeholder"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="7dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_remove"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="#DCDBDC"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/opensans_semibold"
                        android:textAllCaps="true"
                        android:textSize="11dp"
                        android:visibility="visible" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>